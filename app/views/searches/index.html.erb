<header>
  <div header__bars_icon>
    <%= link_to "　ユーザー選択", sessions_path, method: :delete, class: "fas fa-users"%>
  </div>
  <div class="individual_area">
    <div class="individual_area__element">
      <%= @individual.department %>
    </div>
    <div class="individual_area__element">
      <%= @individual.name %>
    </div>
  </div>
    <div class="header__add_icon">
      <%= link_to "　追加", new_individual_search_path, method: :get, class: 'fas fa-plus'%>
    </div>
    <div class="header__bars_icon" data=<%= "#{@individual.id}" %> >
      <i class="fas fa-bars"></i>
    </div>
</header>
<%= render "layouts/notifications" %>
<main>
  <div class="search-result-content">
    <div id="search-result">
    </div>
    <div class="menue-content">
    </div>
  </div>
  <div class="search-form__wrapper">
    <div class="search-form" individual_id=<%= "#{@individual.id}" %> >
      <%= text_field_tag :keyword, "", placeholder: "会社名 or 製品名", class: "search-input" %>
    </div>
    <div class="individual_edit_form">
    </div>
  </div>
  <div class="index">
    <div class="index__list">
      <div class="list">
        <table class="list__company">
          <tr>
            <th>会社名</th>
            <th>事業所</th>
          </tr>
          <% @companyLists.each do |company| %>
          <tr>
            
            <td><%="#{company.name}"%></td>
            <td><%="#{company.office}"%></td>
            <td class="detail_css"><%= link_to "", individual_companies_path(company_id: company.id), class: "fas fa-angle-double-right" %></td>
          </tr>
          <% end %>
        </table>
        <table class="list__item">
          <tr>
            <th>コード</th>
            <th>製品名</th>
          </tr>
          <% @itemLists.each do |item| %>
          <tr>
            <td><%="#{item.code}"%></td>
            <td><%="#{item.name}"%></td>
            <td class="detail_css"><%= link_to "", individual_items_path(item_id: item.id), class: "fas fa-angle-double-right" %></td>
          </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</main>
