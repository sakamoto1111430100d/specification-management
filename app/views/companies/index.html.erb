<div class="company-wapper">
  <div class="company-header">
    <div class="company-header__name"><%= "#{@company.name}  #{@company.office}" %></div>
  </div>
  <div class="company-main">
    <div class="company-main__index">
      <div>
        　　投稿日　　　投稿者　　　コード　　　製品名
      </div>
      
      <div class="company-content">
        <% @documents.each do |document| %>
          <div class="company-content--document">
            <div class="company-content--document--date">
              <%= link_to "#{document.date}", user_searches_path(current_user) %>
            </div>
            <div class="company-content--document--author">
              <%= link_to "#{document.author}", user_searches_path(current_user) %>
            </div>
            <div class="company-content--document--image">
              <%= link_to "#{document.image}", user_searches_path(current_user) %>
            </div>
          </div>
          <div class="company-content--document">
            <div class="company-content--document--item_id">
              <%= link_to "#{document.item_id}", user_searches_path(current_user) %>
            </div>
          </div>
        <% end %>

      </div>
    </div>
  </div>
  <div class="company-footer"></div>
</div>