<div class="devise_wrapper">
  <div class="devise_content">

    <h2>パスワードを変更</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <%= f.label :password, "新しいパスワード" %><br />
        <% if @minimum_password_length %>
          <em>(最小 <%= @minimum_password_length %>文字)</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "新しいパスワード" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "確認用新しいパスワード" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "新しいパスワード" %>
      </div>

      <div class="actions">
        <%= f.submit "パスワードを変更する" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
